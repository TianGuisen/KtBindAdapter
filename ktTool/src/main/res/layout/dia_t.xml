<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_round_white"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingTop="16.5mm"
              tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12mm"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20mm"
        android:textSize="70mm"
        android:text="提示"/>

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="240mm"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20mm"
        android:layout_marginRight="20mm"
        android:layout_marginTop="10mm"
        android:gravity="center"
        android:textSize="60mm"
        android:paddingLeft="3mm"
        android:paddingRight="3mm"
        android:textColor="#333333"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1mm"
        android:layout_marginTop="30mm"
        android:background="#D9D9D9"/>

    <LinearLayout
        android:layout_width="800mm"
        android:layout_height="120mm"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="0mm"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="60mm"
            android:text="确认"
            android:textColor="#333333"/>

        <View
            android:layout_width="1mm"
            android:layout_height="match_parent"
            android:background="#D9D9D9"/>

        <TextView
            android:id="@+id/tv_cancel"
            android:textSize="60mm"
            android:layout_width="0mm"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"/>
    </LinearLayout>
</LinearLayout>
